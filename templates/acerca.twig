<script>
let datos;
    getData();// Para hacer la carga inicial de datos
    // AÃ±ado un evento al pulsar una tecla en el "campo"
    document.getElementById("fecha").addEventListener("change", getData);
    function getData(){
        //let input = document.getElementById("campo").value; 
        let contenido = document.getElementById("contenido");
        let url = "load.php";
        let formData = new FormData(document.getElementById("formulario"));
        fetch(url,{
            method:"post",
            body: formData})
            .then (response => response.json())
            .then (data => {
                contenido.innerHTML = data.html;
                datos = data.json;
            })
            .catch (err => console.log(err))
    }




</script>

